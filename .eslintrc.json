{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "import/extensions": ["error", {"js": "always", "json": "always",
      "elm": "always"
    } ]
  }
}
